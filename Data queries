create table nurse (
nurse_id int ,
first_name char (20) ,
last_name char (20) ,
phone int ,
address char (40),
primary key (nurse_id)

)

create table doctors (
doctor_id int ,
first_name char (20) ,
last_name char (20) ,
spc char (30) ,
phone int ,
address char (40),
arrival datetime ,
leave datetime 
primary key (doctor_id)

)

create table patients (
patient_id int ,
first_name char (20) ,
last_name char (20) ,
phone int ,
address char (40),
doctor_id int ,
nurse_id int ,
primary key (patient_id),
foreign key (doctor_id) references doctors(doctor_id) ,
foreign key (nurse_id) references nurse(nurse_id)

)
create table admin (
admin_id int ,
first_name char (20) ,
last_name char (20) ,
phone int ,
address char (40),
primary key (admin_id)

)
create table ward_boy (
ward_id int ,
first_name char (20) ,
last_name char (20) ,
phone int ,
address char (40),
primary key (ward_id)

)

create table rooms (
room_id int ,
type char (20) ,
patient_id int ,
primary key (room_id,type),
foreign key (patient_id) references patients(patient_id)
)


create table salary (
doctor_id int ,
nurse_id int ,
ward_id int ,
salary decimal ,
foreign key (doctor_id) references doctors(doctor_id),
foreign key (nurse_id) references nurse(nurse_id),
foreign key (ward_id) references ward_boy(ward_id)
)

create table history (
patient_id int ,
date_enter datetime ,
date_leave datetime ,
disease char(30),
treatment char(30),
chronic tinyint,
bill decimal,
foreign key (patient_id) references patients(patient_id)
)




create table users (
f_name char(20),
l_name char (20),
password char (20),
e_mail char (60),
doctor_id int ,
patient_id int,
nurse_id int ,
admin_id int ,
primary key (e_mail),
foreign key (doctor_id) references doctors(doctor_id),
foreign key (nurse_id) references nurse(nurse_id),
foreign key (admin_id) references admin(admin_id),
foreign key (patient_id) references patients(patient_id)

)